<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.attention"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.attention.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.attention.Calculator"
            android:label="@string/calculate"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.android.attention.Distance"
            android:label="@string/drive_time"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.android.attention.YourAge"
            android:label="@string/your_age"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.android.attention.Flavor"
            android:label="@string/ice_cream_flavor"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.android.attention.FavoriteColor"
            android:label="@string/fav_color"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>